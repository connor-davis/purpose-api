        var viz;

        function draw() {
            var config = {
                container_id: "viz",
                server_url: "bolt://localhost:7687",
                server_user: "neo4j",
                server_password: "@Cp2606#$%",
                labels: {
                    "User": {
                        "caption": "email",
                        "size": "2",
                        "community": "lastLogin",
                        "title_properties": [
                            "email",
                            "2"
                        ]
                    }
                },
                initial_cypher: "MATCH (user:User) RETURN *"
